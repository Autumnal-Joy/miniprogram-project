.index {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.index .top {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 30rpx;
  flex-grow: 0;
}
.index .top .image image {
  width: 125rpx;
}
.index .top .text {
  font-size: xx-large;
}
.index .middle {
  flex-grow: 1;
}
.index .middle swiper {
  height: 100%;
}
.index .bottom {
  flex-grow: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}
.index .bottom .icon image {
  width: 200rpx;
}
