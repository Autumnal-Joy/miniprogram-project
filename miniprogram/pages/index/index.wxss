.index {
  height: 100%;
  display: flex;
  flex-direction: column;
  position: relative;
}
.index .top .up {
  display: flex;
  padding: 20rpx;
  align-items: center;
  border-bottom: 1rpx solid black;
}
.index .top .up .text {
  font-weight: bold;
}
.index .top .up .image image {
  width: 80rpx;
  transform: rotate(-30deg);
  animation: blink 3s;
}
@keyframes blink {
  0% {
    opacity: 1;
  }
  25% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
  75% {
    opacity: 0;
  }
  100% {
    opacity: 1;
  }
}
.index .top .down {
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 30rpx;
  flex-grow: 0;
}
.index .top .down .image button {
  padding: 0;
  width: 125rpx;
}
.index .top .down .image button image {
  width: 125rpx;
}
.index .top .down .text {
  font-size: xx-large;
}
.index .middle {
  flex-grow: 1;
}
.index .middle .swiper {
  height: 100%;
}
.index .middle .swiper image {
  width: 100%;
}
.index .bottom {
  flex-grow: 0;
  display: flex;
  justify-content: space-around;
  padding: 20rpx;
}
.index .bottom .icon image {
  width: 180rpx;
}
.index .wrap {
  position: absolute;
  width: 400rpx;
  height: 360rpx;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}
.index .wrap .up {
  background-color: #d2efc6;
  color: #38980c;
}
.index .wrap .down {
  background-color: #edbcbc;
  color: #dc2020;
}
.index .wrap .common {
  height: 180rpx;
  border-radius: 15rpx;
  text-align: center;
  line-height: 180rpx;
  font-size: xx-large;
  font-weight: bold;
  box-shadow: 20rpx 20rpx 25rpx -15rpx #000;
}
