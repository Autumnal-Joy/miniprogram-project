<!-- pages/home/home.wxml -->
<background></background>
<view class="switch">
  <to-switch></to-switch>
  <view class="text">语言切换</view>
</view>
<view class="home">
  <view class="top-bottom">
    <view class="wrap">
      <view class="image">
        <image src="./icons/phone.png" mode="widthFix" bind:tap="callHospital"></image>
      </view>
      <view class="text">打120</view>
    </view>
  </view>
  <view class="middle">
    <view class="left">
      <image src="./icons/phonenumber.png" mode="widthFix" bind:tap="makePhoneCall"></image>
    </view>
    <view class="right">
      <picker class="picker" bindchange="onPickerChange" value="{{index}}" range="{{person_info.emergencyCall}}">
        <view class="phone">{{person_info.emergencyCall[index]}}</view>
      </picker>
    </view>
  </view>
  <view class="top-bottom">
    <view class="wrap">
      <view class="image">
        <image src="./icons/helper.png" mode="widthFix"></image>
      </view>
      <view class="text">呼 救</view>
    </view>
  </view>
</view>