<!-- pages/info/info.wxml -->
<background></background>
<view class="info">
  <view class="up">
    <to-switch></to-switch>
    <view class="update">
      <navigator target="self" url="./setInfo/setInfo" hover-class="none" open-type="navigate">
        <view class="button">更新基本信息</view>
      </navigator>
    </view>
  </view>
  <view class="image">
    <image src="./icons/user.png" mode="widthFix"></image>
  </view>
  <view class="down">
    <view class="row">
      <view class="text">姓名:</view>
      <view class="text-box">
        <view class="item">张三</view>
      </view>
    </view>
    <view class="row">
      <view class="text">年龄:</view>
      <view class="text-box">
        <view class="item">69</view>
      </view>
    </view>
    <view class="col">
      <view class="text">紧急联系人电话:</view>
      <view class="text-box">
        <view class="item">110</view>
        <view class="item">120</view>
      </view>
    </view>
    <view class="col">
      <view class="text">家庭住址:</view>
      <view class="text-box">
        <view class="item">上海市</view>
      </view>
    </view>
    <view class="col">
      <view class="text">既往病史:</view>
      <view class="text-box">
        <view class="item">糖尿病</view>
        <view class="item">高脂血症</view>
        <view class="item">高血压</view>
      </view>
    </view>
  </view>
</view>